/* === Contenedor central === */
.container {
    width: 90%;
    max-width: 800px;
    margin: 40px auto;
    background: white;
    padding: 20px;
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
    border-radius: 8px;
}

/* === Encabezados === */
h1, h2, h3 {
    text-align: center;
    color: #004085;
}

/* === Formularios generales === */
form {
    display: flex;
    flex-direction: column;
    gap: 12px;
    margin: 20px 0;
}

input, select, textarea {
    padding: 10px;
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 4px;
    width: 100%;
}

/* === Botones === */
button, .btn {
    background-color: #007bff;
    color: white;
    border: none;
    padding: 10px;
    text-align: center;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.2s ease;
}

button:hover, .btn:hover {
    background-color: #0056b3;
}

/* === Tablas === */
table {
    width: 100%;
    border-collapse: collapse;
    margin: 20px 0;
}

th, td {
    border: 1px solid #ccc;
    padding: 8px;
    text-align: left;
}

th {
    background-color: #007bff;
    color: white;
}

tr:nth-child(even) {
    background-color: #f9f9f9;
}

/* === Enlaces === */
a {
    color: #007bff;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}


/* === Alertas === */
.alert {
    padding: 15px;
    margin: 15px 0;
    border-radius: 5px;
    font-weight: bold;
    text-align: center;
    font-size: 18px;
}

.alert-success {
    background-color: #d4edda;
    color: #155724;
    border: 2px solid #c3e6cb;
}

.alert-danger {
    background-color: #f8d7da;
    color: #721c24;
    border: 2px solid #f5c6cb;
}


/* === Panel === */
.contenido-flex {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    gap: 40px;
    margin: 40px auto;
    max-width: 1800px;
    padding: 20px;
}

.panel-container {
    flex: 1.5;
}

aside {
    flex: 1.5;
    background-color: #f9f9f9;
    padding: 20px;
    font-size: 30px;
    border-radius: 20px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    max-width: 500px;
}
.bienvenida {
    font-size: 50px;
    font-weight: bold;
    color: #333;
    margin-bottom: 5px;
}

.rol {
    font-size: 30px;
    font-weight: bold;
    color: #555;
    margin-bottom: 25px;
}

.panel-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* Fuerza 3 columnas */
    gap: 15px;
    margin-top: 10px;
}


/* === Toasts === */
.toast-container {
    position: fixed;
    top: 20px;
    right: 20px;
    z-index: 9999;
}

.toast {
    min-width: 250px;
    margin-bottom: 10px;
    padding: 15px 20px;
    border-radius: 8px;
    color: #fff;
    font-weight: bold;
    animation: fadeOut 0.5s ease-out 4s forwards;
    box-shadow: 0 0 10px rgba(0,0,0,0.2);
}

.toast-success { background-color: #28a745; }
.toast-error { background-color: #dc3545; }
.toast-warning { background-color: #ffc107; color: #000; }
.toast-info { background-color: #17a2b8; }

@keyframes fadeOut {
    to { opacity: 0; transform: translateY(-20px); }
}

