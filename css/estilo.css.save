/* Botón Iniciar sesión destacado */
.login-form button[type="submit"] {
    font-size: 2em;
    font-weight: bold;
    padding: 14px;
    background-color: #007bff;
    border: none;
    border-radius: 6px;
    color: white;
    transition: background-color 0.2s ease;
}


.form-control {
    width: 100%;
    padding: 8px 12px;
    border: 1px solid #ccc;
    border-radius: 6px;
    box-sizing: border-box;
    font-size: 16px;
    transition: border-color 0.2s, box-shadow 0.2s;
}

.form-control:focus {
    border-color: #007bff; /* Azul Bootstrap */
    box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.25); /* Resplandor azul suave */
    outline: none;
}

